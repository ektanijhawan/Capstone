<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:id="@+id/rlWallpaperMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvWallpaperTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallpaper"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            android:id="@+id/rlWallpaper"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/tvWallpaperTitle">

            <TextView
                android:id="@+id/tvWallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallpaper"
                android:textColor="@color/colorWhite"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvWallpaperDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWallpaper"
                android:text="Turn on the button to set the photos as your device wallpaper"
                android:textColor="@color/colorOffWhite"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/sWallpaper"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sWallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlWallpaperQuality"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/rlWallpaper">

            <TextView
                android:id="@+id/tvWallpaperQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallpaper Quality"
                android:textColor="@color/colorWhite"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvWallpaperQualityDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWallpaperQuality"
                android:text="Set full quality image as your device wallpaper. Recommended over high speed data connection."
                android:textColor="@color/colorOffWhite"
                android:textSize="14dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/sWallpaperQuality"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sWallpaperQuality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlWallpaperMain">

        <TextView
            android:id="@+id/tvPaletteMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Palette"
            android:textColor="@color/colorAccent"
            android:textSize="16dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:id="@+id/rlPaletteCount"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/tvPaletteMain">

            <TextView
                android:id="@+id/tvPalette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Colors"
                android:textColor="@color/colorWhite"
                android:textSize="17dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvPaletteDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPalette"
                android:text="Show only major colors from image."
                android:textColor="@color/colorOffWhite"
                android:textSize="14dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="20dp"/>

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/sPalette"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"/>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>